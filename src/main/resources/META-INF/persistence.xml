<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.1">
    <persistence-unit name="jpabook">
        <properties>
            <!-- 필수 속성 -->
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.user" value="${dbUsername}"/>
            <property name="javax.persistence.jdbc.password" value="${dbPassword}"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://${dbIpDev}:${dbPort}/${dbName}?serverTimezone=Asia/Seoul"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
        </properties>
    </persistence-unit>
</persistence>